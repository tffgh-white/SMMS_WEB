{
  "name": "smms-web-backend",
  "version": "1.0.0",
  "description": "SMMS_WEB Backend Server",
  "type": "module",
  "main": "server2.0.js",
  "bin": {
    "smms-web-backend": "server2.0.js"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "build": "pkg . --out-path dist",
    "build-linux": "pkg server.js --targets node16-linux-x64 --output smms-web-backend-linux",
    "build-windows": "pkg server.js --targets node16-win-x64 --output smms-web-backend-windows.exe",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mysql2": "^3.16.0"
  },
  "devDependencies": {
    "nexe": "^4.0.0-rc.2",
    "pkg": "^5.5.2"
  },
  "pkg": {
    "scripts": [
      "server.js"
    ],
    "assets": [
      "node_modules/**/*"
    ],
    "targets": [
      "node18-linux-x64",
      "node18-win-x64",
      "node18-macos-x64"
    ],
    "outputPath": "dist"
  }
}
